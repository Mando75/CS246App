<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/toolbarNote"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.group4.readingapp.scripturereadingapp.EnableNotifications">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="-12dp"
        tools:layout_editor_absoluteY="-11dp">

        <Button
            android:id="@+id/enableNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enableNotify"
            android:text="@string/enable_notifi"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/toolbarNote"/>

        <Button
            android:id="@+id/disableNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="disableNotify"
            android:text="@string/disable_notifi"
            android:layout_below="@+id/enableNotify"
            android:layout_alignStart="@+id/enableNotify"
            android:layout_marginTop="33dp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
